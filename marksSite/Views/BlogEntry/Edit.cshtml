@model marksSite.Model.BlogEntry
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/CSS/StyleSheet.css">
    <title>Edit Review</title>
</head>
<body>

    <h3>Review</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" value="@Model.BlogEntryId" asp-for="BlogEntryId" />
                <div class="form-group">
                    <label asp-for="EntryTitle" class="control-label"></label>
                    <input asp-for="EntryTitle" class="form-control" />
                    <span asp-validation-for="EntryTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control" rows="10" cols="60"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" value="@Model.BlogEntryId" asp-for="BlogEntryId" class="form-control" />
                    <input type="hidden" value="@Model.BlogId" asp-for="BlogId" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a href="~/Product/Details/@Model.BlogId">Return to Previous Menu</a>
    </div>


</body>
</html>