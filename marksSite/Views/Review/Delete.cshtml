@model marksSite.Model.Review
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <title>Delete a Review</title>
</head>
<body>

    <h3>Are you sure you want to delete This?</h3>
    <div>
        <h3>Review: </h3>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <span>@Html.DisplayNameFor(model => model.Content):</span>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Content)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" value="@Model.ReviewId" asp-for="ReviewId" />
            <input type="hidden" value="@Model.ProductId" asp-for="ProductId" />
            <input type="submit" value="Delete" class="btn btn-default" /> |
        </form>
        <a href="~/Product/Details/@Model.ProductId">Return to Previous Menu</a>
    </div>
</body>
</html>